<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/emailregistertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/icmail"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:textColor="@color/teamateWhite"
        android:textColorHint="@color/teamateWhite"
        android:textColorHighlight="@color/teamateWhite"/>

    <EditText
        android:id="@+id/passwordregistertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/iclock"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:textColor="@color/teamateWhite"
        android:textColorHint="@color/teamateWhite"
        android:textColorHighlight="@color/teamateWhite"/>
    <EditText
        android:id="@+id/registercompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="@drawable/shapeemail"
        android:drawableLeft="@drawable/iclock"
        android:drawablePadding="10dp"
        android:hint="Company Code"
        android:textColor="@color/teamateWhite"
        android:textColorHint="@color/teamateWhite"
        android:textColorHighlight="@color/teamateWhite"/>


    <Button
        android:onClick="saveNote"
        android:id="@+id/signupregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:shadowColor="@android:color/transparent"
        android:padding="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/shapesignup"
        android:textColor="@color/cardview_dark_background"/>


</LinearLayout>